# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page
GET	    /index/{index}						Application.index
GET    	/                                     			Application.index

GET		/contact								Application.contact
GET	    /disclaimer								Application.disclaimer

#SimpleQuadroTest
GET		/quadro/setup						QuadroTestController.setup
POST	/quadro/setup						QuadroTestController.setTable
POST	/quadro/graph						QuadroTestController.calcQuadroGraph

#CNA Tests
GET		/setup/1						CNAController.setup
POST	/setup/2						CNAController.prepare
POST    /setup							CNAController.generateGraph
POST	/graph							CNAController.calcCNAGraph
POST	/mtinput/setup/2				CNAController.inputMT
POST	/tableinput/graph				CNAController.inputTable
POST	/quickrun/graph					CNAController.baumgartnerSample

#CNA Tests
GET		/input/setup						Input.setup
POST	/input/graph						Input.calcCNAGraph
GET		/draw/setup							DrawGraph.setup
POST	/draw/graph							DrawGraph.drawGraph

GET		/testing/{step} 						Application.complexTesting

# Map static resources from the /app/public folder to the /public path
GET     /public/             staticDir:public

# Catch all
*      	/{controller}/{action}                  {controller}.{action}


#/testing/{step}/{showTable}/{table}/{generatedGraphPath}/{generatedGraph}/{calculatedGraphPath}/{calculatedGraph}/{time}/{algorithmName}
